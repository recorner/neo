/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    @apply bg-neutral-900 text-blue-50 font-opensans;
  }

  .font-montserrat {
    font-family: 'Montserrat', sans-serif;
  }

  .font-opensans {
    font-family: 'Open Sans', sans-serif;
  }

  input {
    @apply focus:outline-none;
  }

  .error {
    @apply !m-0 text-sm text-red-500 block;
  }
}
